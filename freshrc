# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

# Updates fresh
fresh freshshell/fresh bin/fresh --bin

# Hammerspoon
fresh jasonrudolph/ControlEscape.spoon . --file=~/.hammerspoon/Spoons/ControlEscape.spoon/
fresh programs/hammerspoon/init.lua --file=~/.hammerspoon/init.lua

# symlink files
fresh programs/bash/bashrc --file
fresh programs/bash/bash_profile --file
fresh programs/vim/vimrc --file
fresh Brewfile --file=Brewfile
fresh programs/tmux/tmux.conf --file
fresh chriskempson/base16-shell . --file=~/.config/base16-shell/

# tmux up - thanks James
fresh jamesottaway/tmux-up tmux-up --bin

# components of bashrc
fresh programs/bash/dotfiles.sh
fresh programs/bash/path.sh
fresh programs/bash/prompt.sh
fresh programs/bash/aliases.sh
fresh programs/bash/base_16.sh

# gets plug.vim file from junegunn/vim-plug and puts it at ~/.vim/autoload/plug.vim
fresh junegunn/vim-plug plug.vim --file=~/.vim/autoload/plug.vim
